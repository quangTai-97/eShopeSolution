@using eShopSolution.ViewModels.Common;
@model PagedResult<eShopSolution.ViewModels.System.UserViewModel>

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
        
    </script>

    }
    @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@
    <h4><b>Danh sách người dùng</b></h4>
    <div class="row">
        <div class="col-12">

            <div class="page-title-box">
                <div class="page-title-left">
                    <ol class="breadcrumb p-0 m-0" style="float:left !important">
                        @*<li class="breadcrumb-item"><a href="#">Velonic</a></li>*@
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Danh sách người dùng</li>
                    </ol>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="card-header">
        <button class="btn btn-success" asp-action="Create" asp-controller="User">Tạo mới</button>
        <form asp-action="Index" method="get">

            <input type="text" class=" form-control" value="@ViewBag.KeyWord" name="keyWord" />
            <button type="submit" value="Tìm" class="btn btn-primary">Tìm</button>
            <button type="button" onclick="window.location.href='User/Index'" class="btn btn-primary">Reset</button>
        </form>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        @if (ViewBag.Success != null)
                        {
                            <div id="msgAlert" class="alert alert-success" role="alert">
                                @ViewBag.SuccessMsg
                            </div>
                        }
                    </div>
                </div>
               
                <div class="card-body table-responsive">

                    <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                        <thead>
                            <tr>
                                @*<th>ID</th>*@
                                <th>FirstName</th>
                                <th>LastName</th>
                                <th>Phone</th>
                                <th>UserName</th>
                                <th>Email</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LasttName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Update", new { userId = item.Id }) |
                                        @Html.ActionLink("Xem", "Details", new { Id = item.Id }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }) |
                                        @Html.ActionLink("Phân quyền", "RoleAssign", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @await Component.InvokeAsync("Pager", Model)
                </div>
            </div>
        </div>
    </div>


